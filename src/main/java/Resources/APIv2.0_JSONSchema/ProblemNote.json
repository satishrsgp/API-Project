      "description": "",
      "vendorExtensions": {
        "storage": {
          "type": "table",
          "field": "note",
          "name": "problem_note_xref"
        }
      }
    },
    "createdBy": {
      "type": "integer",
      "description": "",
      "vendorExtensions": {
        "storage": {
          "type": "table",
          "field": "created_by",
          "name": "problem_note_xref"
