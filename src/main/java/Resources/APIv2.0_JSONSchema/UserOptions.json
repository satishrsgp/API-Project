          "filter": "Task List by Enterprise/Practice"
        }
      }
    },
    "useMetric": {
      "type": "boolean",
      "vendorExtensions": {
        "storage": {
          "type": "table",
          "field": "preference_value",
          "name": "preference_list",
          "filter": "Metric"
        }
      }
