{
  "$schema": "http://json-schema.org/draft-04/schema",
  "id": "UserOptions.json",
  "title": "userOptions",
  "description": "Model object that contains options for a particular user",
  "type": "object",
  "identifier": "",
  "ignore": false,
  "required": [
    "displayRenewals",
    "sendErxCreatedDayLimit",
    "providerFavoriteMedicationsXml",
    "showTasksAssignedToOthers",
    "showCompletedTasks",
    "showDeletedTasks",
    "filterTasksByEnterpriseAndPractice",
    "useMetric"
  ],
  "properties": {
    "displayRenewals": {
      "type": "boolean",
      "vendorExtensions": {
        "storage": {
          "type": "table",
          "field": "preference_value",
          "name": "preference_list",
          "filter": "Display Renewal History Popup"
        }
      }
    },
    "sendErxCreatedDayLimit": {
      "type": "integer",
      "vendorExtensions": {
        "storage": {
          "type": "table",
          "field": "config_value",
          "name": "surescripts_config",
          "filter": "NG_SEND_ERX_CREATE_DATE_LIMIT"
        }
      }
    },
    "providerFavoriteMedicationsXml": {
      "type": "string",
      "description": "This is the xml string of the provider's favorite medication options.",
      "vendorExtensions": {
        "storage": {
          "type": "table",
          "field": "data",
          "name": "user_component_preference",
          "filter": "Med_Search_OptionsFavorites"
        }
      }
    },
    "showTasksAssignedToOthers": {
      "type": "boolean",
      "vendorExtensions": {
        "storage": {
          "type": "table",
          "field": "user_pref",
          "name": "item_name",
          "filter": "Show Tasks Assigned To Others"
        }
      }
    },
    "taskFuturePastFilter": {
      "type": "string",
      "description":
        "This value is a semi-colon separated value. The first number is how many days in the future that tasks should show. The second number is how many months in the past should tasks show.",
      "vendorExtensions": {
        "storage": {
          "type": "table",
          "field": "user_pref",
          "name": "item_name",
          "filter": "Filter Future Past Tasks"
        }
      }
    },
    "showCompletedTasks": {
      "type": "boolean",
      "vendorExtensions": {
        "storage": {
          "type": "table",
          "field": "user_pref",
          "name": "item_name",
          "filter": "Show Completed Tasks"
        }
      }
    },
    "showDeletedTasks": {
      "type": "boolean",
      "vendorExtensions": {
        "storage": {
          "type": "table",
          "field": "user_pref",
          "name": "item_name",
          "filter": "Show Deleted Tasks"
        }
      }
    },
    "filterTasksByEnterpriseAndPractice": {
